<h1>Burgers!</h1>

<h2>Burgers eaton!</h2>

<ul>
  {{#each burger}}
  {{#if devoured}}
    <li>
        <span>{{this.burger_name}}</span>     
    </li>
  {{/if}}
  {{/each}}
</ul>

<h2>Burgers Hot & Ready!</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
    <li>
        <span>{{this.burger_name}}</span>     
    </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bn">Burger Name:</label>
    <input type="text" id="bn" name="name">
  </div>

  <div class="form-group">
    <label for="eating">Have Eaton?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Devoured
  </div>

  <button id="test"type="submit">Add Burger</button>
</form>
